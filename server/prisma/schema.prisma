// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

//
generator client {
  provider = "prisma-client-js"
}

//
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
model Right {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  //
  roles Role[]

  //
  @@map("rights")
}

//
model Role {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  //
  rights Right[]

  //
  @@map("roles")
}
